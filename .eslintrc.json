{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "default-case": "off"
  },
  "ignorePatterns": "dist/**/*.js"
}
